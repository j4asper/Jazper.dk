@page "/"

<MudStack Spacing="4" AlignItems="AlignItems.Center">
    <MudImage Src="images/jazper.png" Width="200"/>
    
    <MudStack Row="true">
        <MudTooltip Text="GitHub Profile">
            <MudIconButton
                Color="Color.Success"
                Size="Size.Large"
                Icon="@Icons.Custom.Brands.GitHub"
                Target="_blank"
                Href="https://github.com/j4asper"/>
        </MudTooltip>

        <MudTooltip Text="LinkedIn">
            <MudIconButton
                Color="Color.Success"
                Size="Size.Large"
                Icon="@Icons.Custom.Brands.LinkedIn"
                Target="_blank"
                Href="https://www.linkedin.com/in/jasper-onsberg-christiansen"/>
        </MudTooltip>

        <MudTooltip Text="Email">
            <MudIconButton
                Color="Color.Success"
                Size="Size.Large"
                Icon="@Icons.Material.Filled.Email"
                Target="_blank"
                Href="mailto:jasper@jazper.dk"/>
        </MudTooltip>
    </MudStack>
    
    <MudDivider/>
    
    @foreach (var category in TechStackOptions.Value.Categories)
    {
        <MudStack AlignItems="AlignItems.Center" Class="mb-4">
            <MudText Typo="Typo.h5" Class="gradient-text">@category.Title</MudText>
            <MudStack Row="true">
                @foreach (var entry in category.Entries)
                {
                    <MudTooltip Text="@entry.Name" ShowOnClick="true">
                        <MudIcon Size="Size.Large" Icon="@IconProvider.GetIcon(entry.IconName)" Color="Color.Primary"/>
                    </MudTooltip>
                }
            </MudStack>
        </MudStack>
    }
    
</MudStack>


@code {
    [Inject] public required IconProvider IconProvider { get; set; }
    [Inject] public required IOptions<TechStackOptions> TechStackOptions { get; set; }
}