@model JazperDK.Models.Social[]
@{
    ViewData["Title"] = "Jazper";
}

<div class="particles-js" id="particles-js"></div>

<header>
    <h1>JAZPER</h1>
</header>

<main id="social-buttons">
    @foreach (var social in Model)
    {
        <a href=@social.Link target="_blank">
            <button title="@social.Description">
                <img class="icon" src="@social.Img" alt="@social.ImgAlt">
                @social.Platform
            </button>
        </a>
    }

</main>

@if ((bool)ViewData["HasIP"])
{
    <p id="ipvar" class="var">@ViewData["IP"]</p>
    <p id="geovar" class="var">@ViewData["Location"]</p>

    <footer>
        <p id="loadtext"></p>
    </footer>
}

<script src="~/js/particles.js"></script>
<script>
    particlesJS.load('particles-js', '../configs/particles.json');
</script>